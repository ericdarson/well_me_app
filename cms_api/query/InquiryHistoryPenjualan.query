SELECT t.ID_TRANS_JUAL, t.BCA_ID, t.ID_PRODUK, p.NAMA_PRODUK, t.ID_PLAN, pp.NAMA_PLAN, DECODE(t.STATUS_PENJUALAN,0,'CANCELED','1','ORDER',2,'VERIFIED',9,'DONE','ERROR'), t.NAB, t.JUMLAH_UNIT, t.NAB * t.JUMLAH_UNIT, t.TANGGAL_ORDER_JUAL, t.TANGGAL_VERIFIKASI_BANK, t.TANGGAL_PENJUALAN
FROM T_TRANSAKSI_JUAL t join T_PRODUK_REKSADANA p on t.ID_PRODUK = p.ID_PRODUK
    join T_PLANNER pp ON t.ID_PLAN = pp.ID_PLAN
WHERE t.BCA_ID LIKE '%s' AND t.TANGGAL_ORDER_BELI > TRUNC(ADD_MONTHS(SYSDATE,-3))
ORDER BY t.ID_TRANS_BELI DESC